@{
    Layout = "_PartialModel";
}

@section Header
{
}

@section Content 
{
    <div class="card-body pb-0">
        <h6 class="card-subtitle text-muted">@ViewData["ModelName"] "<span class="text-danger">@ViewData["ModelValue"]</span>" löschen?</h6>
    </div>
    <div class="card-body">
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="@ViewData["ModelId"]"/>
            <input type="submit" value="Löschen" class="btn btn-danger"/>
        </form>
    </div>
}

@section Footer 
{
    <a asp-action="Index">Zurück zur Liste</a>
}

@RenderBody()