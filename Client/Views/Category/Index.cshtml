@model IEnumerable<Varasto.Core.Model.Category>

@{
    ViewData["Title"] = "Kategorie";
    ViewData["TitleCreate"] = "Neue Kategorie anlegen";
    Layout = "_PartialModelIndex";
}

@section ModelCols{
    <th scope="col">
        @Html.DisplayNameFor(model => model.CategoryId)
    </th>
    <th scope="col">
        @Html.DisplayNameFor(model => model.Description)
    </th>
    <th scope="col" colspan="3">
        Aktionen
    </th>
}

@section ModelRows{
    @foreach (var item in Model)
    {
        <tr>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>

            <td>
                <a role="button" class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.CategoryId">Bearbeiten</a>
            </td>
            <td>
                <a role="button" class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.CategoryId">Details</a>
            </td>
            <td>
                <a role="button" class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.CategoryId">LÃ¶schen</a>
            </td>
        </tr>
    }
}
